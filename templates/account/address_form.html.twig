{% extends 'base.html.twig' %}

{% block title %}Ajouter adresse{% endblock %}

{% block body %}
    <div class="container-fluid form-addAdress">
        <div class="container">
            <h1 class="text-white mb-5"><span>G</span>érer mes <span>A</span>dresses</h1>
            {# <div class="row mt-5">
                <div class="col-md-6">
                    <a href="{{ path('app_account') }}" class="w3-btn w3-blue w3-left">Retour à mon compte</a>
                </div>
                <div class="col-md-6">
                    <a href="{{ path('account_address') }}" class="w3-btn w3-blue w3-right">Mes adresses</a>
                </div>
            </div> #}

            {% for success in app.flashes('success') %}
                <div class="alert alert-success">
                    {{ success }}
                </div>
            {% endfor %}
            {{ form_start(form) }}
                <div class="row" style="font-weight:900;font-family:'Roboto Condensed';color:var(--white);font-size:25px">
                    <div class="col-md-6">
                        {{ form_row(form.name) }}
                    </div>
                    <div class="col-md-6">
                        {{ form_row(form.phone) }}
                    </div>
                    <div class="col-md-6">
                        {{ form_row(form.firstname) }}
                    </div>
                    <div class="col-md-6">
                        {{ form_row(form.lastname) }}
                    </div>
                    <div class="col-md-6">
                        {{ form_row(form.address) }}
                    </div>
                    <div class="col-md-6">
                        {{ form_row(form.postal) }}
                    </div>
                    <div class="col-md-6">
                        {{ form_row(form.city) }}
                    </div>
                    <div class="col-md-6 mb-4">
                        {{ form_row(form.country) }}
                    </div>
                </div>
            {{ form_end(form) }}
            <div class="row mt-5 mb-5 myAdress-links">
                <div class="col-md-6">
                    <button type="button" class="btn btn bckg-blackgrey btn-lg"><a href="{{ path('app_account') }}">Retour à mon compte</a></button>
                </div>
                <div class="col-md-6">
                    <button type="button" class="btn btn bckg-blackgrey btn-lg mb-5"><a href="{{ path('account_address') }}">Mes adresses</a></button>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

